.container
  .row.justify-content-center.my-5
    .col-6
      h2 Log in

      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-inputs
          .m-3
            = f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "form-br-color" },
                  label_html: { class: "mb-2" }
          .m-3
            = f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "form-br-color" },
                  label_html: { class: "mb-2" }
          .m-3
            = f.input :remember_me, as: :boolean if devise_mapping.rememberable?

        .form-actions.d-grid.gap-2.d-md-flex.justify-content-md-center.mt-5
          = f.button :submit, "Log in", class: "btn-primary btn-lg form-btn-color form-br-color"
          = f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary btn-lg main-color form-br-color cancel-btn"
